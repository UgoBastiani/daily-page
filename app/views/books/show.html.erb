<div class="card mb-3 rounded-3 mx-auto" style="max-width: 600px; background-color: white;">
  <div class="row g-0 mt-5">
    <div class="col-12 text-center">
      <img class="img-fluid rounded-start" src="<%= @book.thumbnail %>" alt="Book Picture" id="img-book" style="width: 50%; max-width: 300px;">
    </div>
  </div>

  <div class="row g-0 mt-3">
    <div class="col-12">
      <div class="card-body">
        <!-- Part 1: Book Title and Author -->
        <div class="p-3 mb-3 bg-light">
          <h4><strong><%= @book.title %></strong></h4>
          <p><em><%= @book.author %></em></p>
        </div>

        <!-- Accordion for Description and About -->
        <div class="accordion" id="accordionBookDetails">
          <!-- Part 2: Description of the Book -->
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingDescription">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseDescription" aria-expanded="false" aria-controls="collapseDescription">
                Description
              </button>
            </h2>
            <div id="collapseDescription" class="accordion-collapse collapse" aria-labelledby="headingDescription">
              <div class="accordion-body p-3 bg-light">
                <p><%= @book.description %></p>
              </div>
            </div>
          </div>

          <!-- Part 3: About the Book -->
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingAbout">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAbout" aria-expanded="false" aria-controls="collapseAbout">
                About
              </button>
            </h2>
            <div id="collapseAbout" class="accordion-collapse collapse" aria-labelledby="headingAbout">
              <div class="accordion-body p-3 bg-light">
                <div><strong>Author:</strong> <%= @book.author %></div>
                <hr style="border: 1px solid black;">
                <div><strong>Title:</strong> <%= @book.title %></div>
                <hr style="border: 1px solid black;">
                <div><strong>Number of Pages:</strong> <%= @book.number_of_pages %></div>
                <hr style="border: 1px solid black;">
                <div><strong>Publishing Date:</strong> <%= @book.publishing_date %></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Add to Favorites Button -->
        <div class="d-flex justify-content-center mt-4">
          <%= link_to book_favorites_path(@book), data: { turbo_method: 'POST' }, class: 'btn btn-info d-flex align-items-center justify-content-center w-100', style: 'height: 60px; padding: 0 1rem;' do %>
            <i class="fa-regular fa-bookmark" style="font-size: 1.5rem; margin-right: 0.5rem;"></i>
            <span>Add to Favorites</span>
          <% end %>
        </div>

        <!-- Share Button -->
        <div class="d-flex justify-content-center mt-3">
          <%= link_to '#', class: 'btn btn-success d-flex align-items-center justify-content-center w-100', style: 'height: 60px; padding: 0 1rem;' do %>
            <i class="fa-solid fa-share" style="font-size: 1.5rem; margin-right: 0.5rem;"></i>
            <span>Share</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
