<div class="card mb-3" style="max-width: 600px;">
  <div class="row g-0">
    <div class="col-4 d-flex justify-content-center align-items-center">
      <img class="img-fluid rounded-start" src="<%= favorite.book.thumbnail %>" alt="Book Picture" id="img-book" style="margin-right: 10px;">
    </div>
    <div class="col-8">
      <div class="card-body p-2">
        <ul class="list-unstyled mb-0">
          <li><h5 class="mb-1"><strong>Title</strong></h5> <p class="mb-1"><%= favorite.book.title %></li></p>
          <li><h5 class="mb-1"><strong>Author</strong></h5> <p class="mb-1"><%= favorite.book.author %></li></p>
          <li><h5 class="mb-1"><strong>Year</strong></h5> <p class="mb-1"><%= favorite.book.publishing_date %></li></p>
        </ul>
        <div class="d-flex mt-2">
          <%= render "shared/popupshare", id: favorite.id %>
          <%= render "suggestions/sugg_button", book: favorite.book %>
          <% if favorite.read %>
            <%= button_to 'Unread', mark_as_unread_favorite_path(favorite), method: :patch, data: { confirm: 'Are you sure you want to mark this book as unread?' }, class: "btn custom-btn-red ms-2"%>
          <% else %>
            <%= button_to 'Read', mark_as_read_favorite_path(favorite), method: :patch, data: { confirm: 'Are you sure you want to mark this book as read?' }, class: "btn custom-btn-green ms-2" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
