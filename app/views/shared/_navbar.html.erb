<% unless current_page?(root_path) %>
<div class="navbar navbar-expand-sm navbar-lewagon d-flex">
  <div class="container-fluid justify-content-around align-items-center">
    <% if user_signed_in? %>
      <%= link_to root_path, class: "navbar-brand p-0 m-0" do %>
        <div class="d-flex flex-column align-items-center logo-container">
          <%= image_tag "logo.png"%>
          <div class="logo-caption text-white mt-0.5">Daily</div>
        </div>
      <% end %>
      <%= link_to favorites_path, class: "navbar-brand p-0 m-0" do %>
        <div class="d-flex flex-column align-items-center logo-container">
          <i class="fa-regular fa-bookmark text-white fs-1"></i>
          <div class="logo-caption text-white mt-2">Favorites</div>
        </div>
      <% end %>
      <%= link_to next_book_path, class: "navbar-brand p-0 m-0" do %>
        <div class="d-flex flex-column align-items-center logo-container">
          <i class="fa-solid fa-book-open-reader text-white fs-1"></i>
          <div class="logo-caption text-white mt-2">NB</div>
        </div>
      <% end %>
      <%= link_to profile_path, class: "navbar-brand p-0 m-0" do %>
        <div class="d-flex flex-column align-items-center logo-container">
          <i class="fa-regular fa-user text-white fs-1"></i>
          <div class="logo-caption text-white mt-2">Profil</div>
        </div>
      <% end %>
    <% else %>
      <%= link_to new_user_session_path, class: "navbar-brand p-0 m-0" do %>
        <div class="d-flex flex-column align-items-center logo-container">
          <i class="fa-regular fa-user text-white fs-1"></i>
          <div class="logo-caption text-white mt-2">Sign In</div>
        </div>
      <% end %>
      <%= link_to "#", class: "navbar-brand p-0 m-0" do %>
        <div class="d-flex flex-column align-items-center logo-container">
          <%= image_tag "logo.png"%>
          <div class="logo-caption text-white mt-0.5">Daily</div>
        </div>
      <% end %>
      <%= link_to new_user_registration_path, class: "navbar-brand p-0 m-0" do %>
        <div class="d-flex flex-column align-items-center logo-container">
          <i class="fa-regular fa-user text-white fs-1"></i>
          <div class="logo-caption text-white mt-2">Sign Up</div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<% end %>
